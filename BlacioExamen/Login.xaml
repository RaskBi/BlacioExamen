<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlacioExamen.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
            <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="25"/>
        </Frame>
        <Frame BackgroundColor="white" Padding="24" CornerRadius="0">
            <Image Source="LOGO_UISRAEL.png" />
        </Frame>
        <Entry x:Name="txtUsuario" Placeholder="Usuario"></Entry>
        <Entry x:Name="txtContraseña" Placeholder="Contraseña" IsPassword="True" ></Entry>
        <Button x:Name="btnIngresar" Text="Iniciar sesion" Clicked="btnIngresar_Clicked"></Button>
    </StackLayout>

</ContentPage>
